#!/usr/bin/env variant
# vi: ft=yaml

bindParamsFromEnv: true

parameters:
- name: INPUT_WHO_TO_GREET
  default: default

steps:
- script: |
    set -x
    echo "Hello {{ .INPUT_WHO_TO_GREET }}"

    ls -al /github/home
    ls -al /home/runner
    ls -al /github/workflow
    ls -al /github/workspace

